<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Votre titre ici"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="16dp" />

    <RadioGroup
        android:id="@+id/room_type_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_simple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chambre Simple" />

        <RadioButton
            android:id="@+id/radio_princesse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chambre luxueuse Princess" />

        <RadioButton
            android:id="@+id/radio_royale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chambre luxueuse royale" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="16dp">

        <!-- Quantity Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QuantitÃ©"
            android:textSize="16sp"
            android:layout_marginEnd="16dp" />

        <!-- Quantity Display -->
        <TextView
            android:id="@+id/room_quantity"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="01"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Vertical Buttons (Plus and Minus) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Plus Button -->
            <Button
                android:id="@+id/plus_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="+"
                android:textSize="30sp"
                android:backgroundTint="@color/purple_500"
                android:textColor="@android:color/white"
                android:gravity="center" />

            <!-- Minus Button -->
            <Button
                android:id="@+id/minus_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="-"
                android:textSize="30sp"
                android:backgroundTint="@color/purple_500"
                android:gravity="center"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
